# EditorConfig helps maintain consistent coding styles across editors
root = true

# Defaults for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = tab
tab_width = 4

# Python
[*.py]
indent_style = tab
tab_width = 4

# Markdown (keep trailing spaces for line breaks)
[*.md]
trim_trailing_whitespace = false

# Makefiles always use tabs for recipe lines
[Makefile]
indent_style = tab

